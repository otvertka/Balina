<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/image_offer_dialog"

         />

    <TextView
        android:text="Название"
        android:gravity="center"
        android:textColor="#000"
        android:padding="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name_offer_dialog"
         />

    <TextView
        android:text="Описание"
        android:padding="3dp"
        android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_offer_dialog"
         />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:paddingLeft="2dp"
            android:text="Вес: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight" />
        <TextView
            android:text="weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_offer_dialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/weight"
            android:layout_toEndOf="@+id/weight" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        >
        <TextView
            android:paddingLeft="2dp"
            android:text="Калорийность: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calorie" />
        <TextView
            android:text="calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calorie_offer_dialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/calorie"
            android:layout_toEndOf="@+id/calorie" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        >
        <TextView
            android:text="Белки: "
            android:paddingLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proteins" />
        <TextView
            android:text="proteins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/proteins_offer_dialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/proteins"
            android:layout_toEndOf="@+id/proteins" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        >
        <TextView
            android:text="Жиры: "
            android:paddingLeft="2dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fats" />
        <TextView
            android:text="fats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fats_offer_dialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/fats"
            android:layout_toEndOf="@+id/fats" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        >
        <TextView
            android:text="Углеводы: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="2dp"
            android:id="@+id/carbohydrates" />
        <TextView
            android:text="fats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/carbohydrates_offer_dialog"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/carbohydrates"
            android:layout_toEndOf="@+id/carbohydrates" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        >

        <TextView
            android:layout_toLeftOf="@+id/price_offer_dialog"
            android:layout_toStartOf="@+id/price_offer_dialog"

            android:text="Цена: "
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#1b1818"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price" />

        <TextView


            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/price_offer_dialog"
            android:padding="2dp"
            android:layout_alignParentTop="true"
             />
    </RelativeLayout>

    <Button
        android:text="Закрыть"
        android:onClick="close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/button_dialog"
        android:layout_weight="0.01" />


</LinearLayout>